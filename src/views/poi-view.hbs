{{> menu}}

<section class="columns">
    <section class="ui 15 column middle aligned grid raised segment">
        <div class="row">
            <div class="column"><i class="map icon"></i></div>
            <div class="column"><h2>POI Name: </h2></div>
            <div class="column"><h3>{{poi.name}}</h3></div>
        </div>
    </section>
    <section class="columns">
        <div class="row">
            <div class="column"><i class="hiking icon"></i></div>
            <div class="column"><h2>Category</h2></div>
            <div class="column"><h3>{{poi.category.name}}</h3></div>
        </div>
    </section>
    <section class="columns">
        <div class="row">
            <div class="column"><i class="teal huge globe icon"></i></div>
            <div class="column"><h2>Location</h2></div>
            <div class="column"><h3>Latitude: {{poi.latitude}}</h3></div>
            <div class="column"><h3>Longitude: {{poi.longitude}}</h3></div>
        </div>
    </section>
    <section class="columns">
        <div class="row">
            <div class="column"><i class="info icon"></i></div>
            <div class="column"><h2>Description</h2></div>
            <div class="column"><h4>{{poi.description}}</h4></div>
        </div>
    </section>
<!--    If there are no images don't show the images section-->
    {{#if poi.image}}
    <section class="columns">
        <div class="row">
            <div class="column"><i class="image icon"></i></div>
            <div class="column"><h2>Images</h2></div>
        </div>
        <div class="row">
            {{#each poi.image}}
                {{> image-card}}
            {{/each}}
        </div>
    </section>
    {{/if}}

    {{> add_images}}
    <section class="columns">
        <div class="column">
            <a href="/delete-poi/{{poi._id}}" class="button">Delete POI</a>
            <a href="/update-poi/{{poi._id}}" class="button">Update POI</a>
        </div>
    </section>
</section>