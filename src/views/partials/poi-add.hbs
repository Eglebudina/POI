<section class="section">
    <h2><i class="title"></i>ADD POINT OF INTEREST</h2>
    <form class="form" action="/addpoi" method="POST" enctype="multipart/form-data">
        <div class="field">
            <label>Name of POI</label>
            <input type="text" name="name" placeholder="Give your POI a name here" required>
        </div>

        <div class="field">
            <label>Category</label>

            <select name="category" class="dropdown">
                {{#each categorys}}
                    <option value="{{name}}">{{name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="field">
            <label>Description</label>
            <input type="text" name="description" placeholder="Give your POI a description"/>
        </div>
        <div class="field">
            <label>Upload an Image</label>
            <input type="file" name="image" accept="image/png, image/jpeg">
        </div>
        <div class="one field">
            <label>Location</label>
            <div class="two fields">
                <div class="field">
                    <label>Longitude</label>
                    <input type="number" name="longitude" step="any" required>
                </div>
                <div class="field">
                    <label>Latitude</label>
                    <input type="number" name="latitude" step="any" required>
                </div>
            </div>
        </div>
        <section class="field is-grouped">
            <div class="control">
                <button class="button is-link">Add</button>
            </div>
            <div class="control">
                 <button class="button is-link is-light">Cancel</button>
            </div>
        </section>
    </form>
    
</section>