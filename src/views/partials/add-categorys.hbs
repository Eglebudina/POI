<form class="box" action="/poi/{{poi._id}}/addcategory" method="POST">
  <label>Enter Category Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Enter Title" name="title">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter lat" name="lat">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter lng" name="lng">
      </div>
    </div>
  </div>
  <button class="button is-primary">Add Category</button>
</form>